{
  "name": "root",
  "private": true,
  "scripts": {
    "init:install": "lerna run init:install",
    "init:bootstrap": "lerna run init:bootstrap && lerna bootstrap --hoist --strict",
    "build": "lerna run build",
    "build:clean": "lerna run build:clean",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "typecheck": "lerna run typecheck",
    "test": "lerna run test",
    "check": "npm run lint && npm run typecheck && npm run test",
    "publish:ci": "lerna publish --canary --no-git-reset --no-verify-access --yes"
  },
  "devDependencies": {
    "lerna": "^3.20.2",
    "rimraf": "^3.0.2"
  }
}
